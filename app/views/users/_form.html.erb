<%= render 'shared/errors', obj: @user %>

<div class="row">
	<div class="col-xs-12">
		<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<div class="col-sm-2 control-label">
					<%= f.label :username %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :username, class: "form-control", placeholder: "Enter your username", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-2 control-label">
					<%= f.label :password %>
				</div>
				<div class="col-sm-8">
					<%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
				</div>
			</div>
			<!-- <div class="form-group">
				<div class="col-sm-2 control-label">
					<%= f.label :confirm_password %>
				</div>
				<div class="col-sm-8">
					<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password" %>
				</div>
			</div> -->
			<div class="form-group">
				<div class="col-sm-2 control-label">
					<%= f.label :email %>
				</div>
				<div class="col-sm-8">
					<%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-2">
					<%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary btn-lg") %>
				</div>
				<% if logged_in? && (current_user == @user || current_user.admin?) %>
					<div class="col-sm-2">
						<%= link_to "Delete account", user_path(@user), method: :delete, data: {confirm: "Are you sure you want to delete account and all their articles?"}, class: "btn btn-danger btn-lg" %>
					</div>
				<% end %>
			</div>
		<% end %>
	</div>
</div>
	