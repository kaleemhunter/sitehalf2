<h1 class="center">Listing all Bloggers</h1>
<hr><br>
<div align="center">
	<%= will_paginate %>
	<% @users.each do |user| %>
		<ul class="listing">
			<div class="row">
				<div class="well col-md-4 col-md-offset-4">
					<li><%= link_to gravatar_for(user), user_path(user) %></li>
					<li class="article-title"><%= link_to user.username, user_path(user) %></li>
					<li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
					<% if logged_in? && (current_user == user || current_user.admin?) %> 
						<li class="center"><%= link_to "Delete account", user_path(user), method: :delete, data: {confirm: "Are your sure you want to delete this user and all their articles?"}, class: "btn btn-danger btn-sm"%></li>
					<% end %>
				</div>
			</div>
		</ul>
	<% end %>	
</div>